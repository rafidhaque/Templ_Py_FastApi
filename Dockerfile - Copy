FROM python:3.8.5
ENV PYTHONUNBUFFERED 1
RUN mkdir /srv/app
WORKDIR /srv/app
COPY requirements.txt /srv/app/
RUN pip install --no-cache-dir -r requirements.txt
COPY . /srv/app/
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "80"]




FROM python:3.8.2
COPY requirements.txt /
RUN pip install --no-cache-dir -r requirements.txt
EXPOSE 80
COPY ./__temp_app__ /__temp_app__
COPY ./db /db
COPY ./app /app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "80"]